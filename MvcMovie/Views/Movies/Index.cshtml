@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<script src="js\site.js"></script>
<h1>Movie List</h1>

<div id="links">
    <a style="float:right;" class="btn btn-info text-white" href="javascript:history.back(1)"><b>Previous Page</b></a>
    <a class="btn btn-info text-white" href="javascript:history.back(-1)"><b>Next Page</b></a>
</div>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>

        Select Genre: <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" class="btn btn-info text-white" />
    </p>
</form>

<p>
    <a class="btn btn-info text-white" asp-action="Create"><b>Create New</b></a>
</p>

<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            <th onclick="sortTable(0)" id="point">
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th onclick="sortTable(0)" id="point">
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a class="btn btn-info text-white" asp-action="Edit" asp-route-id="@item.Id"><b>Edit</b></a>
                    <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.Id"><b>Details</b></a>
                    <a class="btn btn-info text-white" asp-action="Delete" asp-route-id="@item.Id"><b>Delete</b></a>
                </td>
            </tr>
        }
    </tbody>
</table>